<div class="container-fluid  d-flex flex-column">
    <div class="row d-flex justify-content-center">
        <a href="/api/pet/" class="text-white bg-primary p-2 my-5 rounded font-weight-bold">+ Add a pet</a>
    </div>

    {{#each petArr}}
    <div class="row d-flex justify-content-center">
        <div class="col-11 col-md-8 col-lg-5 border p-2 my-2 bg-pet-card">
            <h3>{{this.name}}</h3>
            <p>Type: {{this.type}}</p>
            <p>Breed: {{this.breed}}</p>
            {{#if this.hotel_id}}
            {{> pet-detail}}
            {{/if}}
        </div>
    </div>
    {{/each}}

</div>