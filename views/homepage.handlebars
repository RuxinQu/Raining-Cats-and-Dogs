<div class="container-fluid">
    {{#each hotels as |hotel|}}
    <div class="row d-flex justify-content-center">
        <div class="col-5 border rounded my-3 py-3 bg-hotel-card">
            <h3 class="my-2 font-weight-bold">{{hotel.name}}</h3>
            <p>Address: {{hotel.address}}</p>
            {{> hotel-detail}}
        </div>
    </div>
    {{/each}}
</div>