<div class="container-fluid">
    <div class="row d-flex flex-column justify-content-center align-items-center my-5">
      <h3>Which pet will be staying in {{hotel.name}}?</h3>
      <form class="form my-5" action="/api/hotel/{{hotel.id}}" method="post">

        <div class="form-group choose-pet">
          <label for="name">Choose a pet:</label>
          <select name="name" id="name">
            {{#each petArr}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <button class="btn btn-primary" type="submit">Submit</button>
          <a href="/api/pet">Add a pet</a>
        </div>
      </form>
    </div>
  </div>
